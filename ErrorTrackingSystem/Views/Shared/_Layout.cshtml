<!DOCTYPE html>
 <html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .footer{
            position:fixed;
            left:0px;
            bottom:0px;
            width:100%;
            background-color:deeppink;
            height:8%;
        }
        .navbar-nav li:hover {
            transform: scale(1.3); 
        }
        .navbar-header a
        {
            position: absolute;
            left: 0px;
            height: 0px;          
            width: 100%;
            display: flex;
            justify-content: center;
        }
        
    </style>

</head>
<body>
    <nav class="navbar navbar-inverse" style="background-color:deeppink">
        <div class="container-fluid" style="display: flex">
            <div class="navbar-header">
                <a class="navbar-brand" style="color:grey;font-size:30px">Hata Yönetim Paneli</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="hover"><a href="/Home/Index" style="color:black;">Hata Listesi</a></li>
                <li><a href="/ErrorType/Index" style="color:black;">Hata Tipleri</a></li>
                <li><a href="/Account/Login" style="color:black">Çıkış yap</a></li>
            </ul>
            <div class="navbar-brand" style="margin-left:auto;color:black">
                @Session["Name"] @Session["Surname"] Hoşgeldiniz
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <div class="footer">
    </div>
</body>
</html>

