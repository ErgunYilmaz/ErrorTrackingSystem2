@model ErrorTrackingSystem.Models.Entity.ErrorInformation

@{
    ViewBag.Title = "GetErrorDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>

    .modal {
        text-align: center;
        
    }
</style>
<table class="table table-bordered ">
    <tr>
        <th>Hata Detayı</th>
        <th>Hata Çözümü</th>
        <th>Hata Görseli</th>

    </tr>
    <tbody>
        <tr>
            <td>@Model.ErrorDetails</td>
            <td>@Model.ErrorSolution</td>
            @*<td><a href="/Image/@Model.Image" rel="lightbox"><image src="~/Image/@Model.Image" widht="80" height="80"></a></td>*@
            <td>
                <img src="/Image/@Model.Image"
                     data-toggle="modal"
                     data-target="#exampleModal"
                     widht="80" height="50" />

                <div class="modal fade"
                     id="exampleModal"
                     tabindex="-1"
                     role="dialog"
                     aria-labelledby="exampleModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog"
                         role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                 @*w-100 class so that header
                                div covers 100% width of parent div*@ 
                                <h5 class="modal-title w-auto"
                                    id="exampleModalLabel">
                                </h5>
                                <button type="button"
                                        class="close"
                                        data-dismiss="modal"
                                        aria-label="Close">
                                    <span aria-hidden="true">
                                        ×
                                    </span>
                                </button>
                            </div>

                            <!--Modal body with image-->
                            <div class="modal-body">
                                <img src="/Image/@Model.Image" widht="325" height="325" />
                            </div>

                            @*<div class="modal-footer">
                                <button type="button"
                                        class="btn btn-danger"
                                        data-dismiss="modal">
                                    
                                </button>
                            </div>*@
                        </div>
                    </div>
                </div>
            </td>

        </tr>
    </tbody>
</table>
