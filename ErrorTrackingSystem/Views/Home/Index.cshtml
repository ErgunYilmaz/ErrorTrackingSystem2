@model IEnumerable<ErrorTrackingSystem.Models.Entity.ErrorInformation>

@{
    ViewBag.Title = "Index";
    var errorInformation = ViewBag.modal as ErrorTrackingSystem.Models.Entity.ErrorInformation;

}
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Yeni Hata Ekle
</button>
<br />
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Hata Ekleme Ekranı</h2>
                <form method="post" action="/Home/CreateError" enctype="multipart/form-data">
                    <div class="modal-body">
                        <label>Firma Adı</label>
                        @*<input type="text" class="form-control" name="Company" required="" maxlength="50" />*@
                        @Html.TextBoxFor(modal => errorInformation.Customer.Company, new { @class = "form-control" })
                        <br />
                        <label>Müşteri Ad/Soyad</label>
                        @*<input type="text" class="form-control" name="CustomerName" required="" maxlength="30" />*@
                        @Html.TextBoxFor(modal => errorInformation.Customer.CustomerInformation, new { @class = "form-control" })
                        <br />
                        <label>Adres</label>
                        @*<input type="text" class="form-control" name="CustomerSurname" required="" maxlength="30" />*@
                        @Html.TextBoxFor(modal => errorInformation.City.CityName, new { @class = "form-control" })
                        @*<br />*@
                        @*<label>Hata Tipi</label>*@
                        @*@Html.DropDownListFor(modal => errorInformation.ErrorTypeId, (List<SelectListItem>)ViewBag.info, new { @class = "form-control" })*@
                        @* @Html.DropDownListFor(x=>x.,  List<SelectListItem>, new { @class = "form-control" })*@
                        <br />
                        <label>Hata Özeti</label>
                        @*<input type="text" class="form-control" name="ErrorSummary" required="" maxlength="80" />*@
                        @Html.TextBoxFor(moda => errorInformation.ErrorSummary, new { @class = "form-control" })
                        <br />
                        <label>Görüntü</label>
                        @*@Html.TextBoxFor(model => errorInformation.Image, new { type = "file", name = "File" })*@
                        <input type="file" name="File" class="form-control">
                        <br />
                        <label>Hata Detayı</label>
                        @*<input type="text" class="form-control" name="ErrorDetails" maxlength="200" />*@
                        @Html.TextBoxFor(modal => errorInformation.ErrorDetails, new { @class = "form-control" })
                        <br />
                        <label>Hata Çözümü</label>
                        @Html.TextBoxFor(modal => errorInformation.ErrorSolution, new { @class = "form-control" })
                        <br />
                        <button class="btn btn-info">Verileri Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />
<table id="tblerrors" class="table table-bordered">
    <thead class="btn-primary">
        <tr>
            <th>Firma</th>
            <th>Müşteri Ad/Soyad</th>
            <th>Şehir</th>
            <th>Hata Tipi</th>
            <th>Hata Özeti</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Customer.Company</td>
                <td>@item.Customer.CustomerInformation</td>
                <td>@item.City.CityName</td>
                <td>@item.ErrorTypeId</td>
                <td>@item.ErrorSummary</td>
                @*<td>@item.ErrorTypeId</td>*@
                @*<td><a  class="btn btn-danger " id="btnDeleteError" > SİL </a></td>*@
                <td>@Html.ActionLink("SİL", "DeleteError", new { id = item.ErrorId }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>
                <td><a href="/Home/UpdateError/@item.ErrorId" class="btn btn-success"> GÜNCELLE </a></td>
                <td><a href="/Home/GetErrorDetails/@item.ErrorId" class="btn btn-warning">HATA DETAYI </a></td>
            </tr>
        }
    </tbody>

</table>
