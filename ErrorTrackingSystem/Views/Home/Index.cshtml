@using ErrorTrackingSystem.Models.Entity
@model List<ErrorInformation>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<table id="tblerrors" class="table table-bordered">
    <thead>
        <tr>
            <th>Firma</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Hata Tipi</th>
            <th>Hata Özeti</th>
            @*<th>Görüntü</th>*@
            @*<th>Hata Detayı</th>*@
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Company</td>
            <td>@item.CustomerName</td>
            <td>@item.CustomerSurname</td>
            <td>@item.ErrorTypes.ErrorTypeName</td>
            <td>@item.ErrorSummary</td>
            @*<td><image src="~/Image/@item.Image" widht="80" height="80"></td>*@
            @*<td>@item.ErrorDetails</td>*@


            <td><a href="/Home/DeleteError/@item.ErrorId" class="btn btn-danger"> SİL </a></td>
            <td><a href="/Home/GetError/@item.ErrorId" class="btn btn-success"> GÜNCELLE </a></td>
            <td><a href="/Home/GetErrorDetails/@item.ErrorId" class="btn btn-warning">HATA DETAYI </a></td>
            



        </tr>}
    </tbody>

</table>
@*@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))*@
<a href="/Home/CreateError/" class="btn btn-primary">Yeni Hata Ekle</a>
