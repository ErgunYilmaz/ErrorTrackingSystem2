@using (Html.BeginForm("CreateError", "Home", FormMethod.Post, new { enctype = "multipart/Form-data" })) 
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Firma Adı</label>
                    <input type="text" class="form-control" name="Company" required="" maxlength="50"/>
                </div>
                <div class="form-group">
                    <label>Müşteri Ad</label>
                    <input type="text" class="form-control" name="CustomerName" required="" maxlength="30"/>
                </div>
                <div class="form-group">
                    <label>Müşteri Soyad</label>
                    <input type="text" class="form-control" name="CustomerSurname" required="" maxlength="30"/>
                </div>
                <div class="form-group">
                    <label>Hata Tipi</label>
                    @Html.DropDownListFor(x => x.ErrorTypeId, (List<SelectListItem>)ViewBag.info, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Hata Özeti</label>
                    <input type="text" class="form-control" name="ErrorSummary" required="" maxlength="80"/>
                </div>
                <div class="form-group">
                    @Html.Label("Görüntü", new { @class = "control-label col-md-2" })
                    <input type="file" name="File" class="form-control">
                </div>
                <div class="form-group">
                    <label>Hata Detayı</label>
                    <input type="text" class="form-control" name="ErrorDetails" maxlength="200"/>
                </div>
                <div>
                    <button class="btn btn-info" type="submit">Hata Ekle</button>               
                </div>
            </div>

        </div>
    </div>
}

